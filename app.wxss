/** 文章相关样式 **/
.article{
  background: #fff;
  padding: 15rpx 20rpx;
  margin-bottom: 10px;
}
.article .title{
  font-weight: bold;
  font-size: 32rpx;
}

.article .meta{
  font-size: 24rpx;
  color: #909090;
}

.article .categories{
  display: inline-block;
}
.article .tags{
  
}
.article .tags text{
  background: #dfe2e5;
  color: #666;
  border-radius: 2px;
  box-shadow: inset 0 -1px 0 rgba(27,31,35,.12);
  padding: 0rpx 10rpx;
  font-size: 22rpx;
  margin-left: 5rpx;
}

.article .excerpt{
  font-size: 28rpx;
  margin: 5px 0;
}

.article .footer{
  font-size: 24rpx;
  color: #909090;
}